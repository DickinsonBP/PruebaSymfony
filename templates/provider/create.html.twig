{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-8 align-center">
            <h1>{{title}}</h1>

            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="flash-{{ label }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}

            {{ form_start(form) }}

            {{ form_rest(form) }}
            <input type="submit" class="btn btn-primary"/>
        
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}